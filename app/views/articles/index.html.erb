<!DOCTYPE html>
<html>
<head>
  <title>AlphaBlog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">


  <table class="table">
    <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Update</th>
      <th scope="col">Show</th>
      <th scope="col">Delete</th>

    </tr>
    </thead>
    <tbody>
    <%  @articles.each do |article| %>
    <tr>
      <td><%= article.id%></td>
      <td><%= article.title%></td>
      <td><a href="<%= edit_article_path(article) %>" class="btn btn-primary">Update</a></td>
      <td><a href="<%= article_path(article) %>" class="btn btn-success">Show</a></td>
     <td> <%= link_to "Delete" , article_path(article), method: :delete %></td>

    </tr>
    <% end %>
    </tbody>
  </table>
</div>
</body>
</html>