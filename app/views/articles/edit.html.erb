<!DOCTYPE html>
<html>
<head>
  <title>AlphaBlog</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">

  <% if @articletoedit.errors.any? %>


      <div class="alert alert-danger" role="alert">
        <ul>
          <% @articletoedit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>



  <%end %>

  <%= form_for @articletoedit do |f| %>
    <div class="form-group">
      <label for="title">Title</label>

      <input type="text" class="form-control" id="title" name="article[title]" aria-describedby="emailHelp" placeholder="Enter email" value="<%= @articletoedit.title %>">

    </div>
    <div class="form-group">
      <label for="desc">Descirption</label>
      <textarea name="article[desc]" class="form-control" id="" cols="30" rows="10"><%= @articletoedit.desc %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

  <% end %>


</div>
</body>
</html>